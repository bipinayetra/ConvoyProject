<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/miles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="1162"
        app:layout_constraintEnd_toStartOf="@+id/offer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/offer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="right"
        android:text="$ 2050"
        android:textColor="@android:color/holo_green_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/miles"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/requested"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="requested"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/miles"
        app:layout_constraintTop_toBottomOf="@+id/miles" />

    <TextView
        android:id="@+id/origin_location"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="origin_location"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/miles"
        app:layout_constraintTop_toBottomOf="@+id/requested" />

    <TextView
        android:id="@+id/origin_pickup_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="origin_pickup_time"
        app:layout_constraintStart_toStartOf="@+id/miles"
        app:layout_constraintTop_toBottomOf="@+id/origin_location" />

    <TextView
        android:id="@+id/destination_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="destination_location"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/miles"
        app:layout_constraintTop_toBottomOf="@+id/origin_pickup_time" />

    <TextView
        android:id="@+id/destination_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="destination_time"
        app:layout_constraintStart_toStartOf="@+id/miles"
        app:layout_constraintTop_toBottomOf="@+id/destination_location" />

</androidx.constraintlayout.widget.ConstraintLayout>